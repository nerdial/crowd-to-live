<div class="card mb-4 box-shadow">
    <div style="padding-top: 20px;width: 100%; height: 70px;background-color: #0069d9;color: #dddddd; text-align: center">
        <h3 style=""> {{ project.status }}</h3>
    </div>
    <img class="card-img-top" src="https://picsum.photos/200/300" alt="Thumbnail [100%x225]"
         style="height: 225px; width: 100%; display: block;">
    <div class="card-body" style="text-align: center">
        <p class="card-text">
        <h3 style="color:red;">{{ project.address }} , {{ project.city }}</h3>
        <br>
        <b> Annual Rent</b>
        <br>
        {{ project.annual_rent }}
        <hr>
        <b> HPI </b>
        <br>
        {{ project.hpi }} %
        <hr>

        <b> Funding Target </b>
        <br>
        ${{ project.funding_target }}
        </p>

        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">

                {% if hasViewButton %}
                    <a type="button" href="/project/{{ project.id }}"
                       class="btn btn-sm btn-outline-secondary">View</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
